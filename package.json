{
  "name": "pocketbase-react-hooks",
  "version": "2.2.1",
  "description": "Collection of React hooks for PocketBase integration",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "prepublishOnly": "bun run build",
    "release": "bun run build && npm publish",
    "prerelease": "bun run build && npm publish --tag beta",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:alpha": "node scripts/version.js alpha",
    "version:beta": "node scripts/version.js beta",
    "version:rc": "node scripts/version.js rc",
    "version:stable": "node scripts/version.js stable",
    "jsr:publish": "bunx jsr publish",
    "jsr:publish:dry-run": "bunx jsr publish --dry-run",
    "prepare": "bunx lefthook install"
  },
  "keywords": [
    "pocketbase",
    "react",
    "hooks",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinBonnoron/pocketbase-react-hooks.git"
  },
  "homepage": "https://github.com/KevinBonnoron/pocketbase-react-hooks#readme",
  "bugs": {
    "url": "https://github.com/KevinBonnoron/pocketbase-react-hooks/issues"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "pocketbase": "^0.26.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^23.2.0",
    "lefthook": "^1.13.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
